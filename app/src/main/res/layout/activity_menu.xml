<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space_background2"
    tools:context=".MenuActivity">

    <!-- Welcome -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/menu_LBL_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To"
        android:textColor="@color/orange_app_color"
        android:textStyle="bold"
        android:textSize="@dimen/menu_welcome_title_size"
        android:shadowColor="@color/shadow"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/welcome_margin_top" />

    <!-- Title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/menu_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPACESHIP\nESCAPE"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/menu_title_size"
        android:gravity="center"
        android:shadowColor= "@color/shadow"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="6"
        app:layout_constraintTop_toBottomOf="@id/menu_LBL_welcome_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_title_top" />

    <!-- Spaceship -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/menu_IMG_spaceship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/spaceship"
        app:layout_constraintTop_toBottomOf="@id/menu_LBL_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Center Panel (Glass) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_CARD_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_start"
        android:layout_marginEnd="@dimen/card_end"
        android:layout_marginTop="@dimen/card_top"
        android:layout_marginBottom="@dimen/card_bottom"
        app:cardCornerRadius="@dimen/card_radius"

        app:strokeColor="@color/stroke_color"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintTop_toBottomOf="@id/menu_IMG_spaceship"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/menu_LAYOUT_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:gravity="center_horizontal"
            >

            <!-- Switch Row: BUTTONS -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/little_margin"
                android:paddingBottom="@dimen/little_margin">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/menu_LBL_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUTTONS"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/switch_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/menu_SWITCH_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/white"
                    app:trackTint="@color/switch_track_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Switch Row: FAST -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/little_margin"
                android:paddingBottom="@dimen/bottom_margin">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/menu_LBL_fast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAST"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/switch_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/menu_SWITCH_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/white"
                    app:trackTint="@color/switch_track_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/little_margin"
                android:paddingBottom="@dimen/bottom_margin">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/menu_LBL_backgroundSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACKGROUND SOUND"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/switch_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/menu_SWITCH_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/white"
                    app:trackTint="@color/switch_track_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Button: Scores -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/menu_BTN_highScores"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/bottom_margin"
                android:text="SCORES"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                android:backgroundTint="@color/orange_app_color"
                app:cornerRadius="@dimen/radius_button"
                app:iconTint="@color/white"
                android:clickable="true"
                android:focusable="true" />

            <!-- Button: Play -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/menu_BTN_play"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/margin_top_button"
                android:text="PLAY"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                android:backgroundTint="@color/orange_app_color"
                app:cornerRadius="@dimen/radius_button"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Decorations -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_LAYOUT_bottomDecor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="@dimen/padding_pics"
        android:paddingEnd="@dimen/padding_pics"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toBottomOf="@id/menu_CARD_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/menu_IMG_galaxy"
            android:layout_width="@dimen/size_galaxy"
            android:layout_height="@dimen/size_galaxy"
            android:src="@drawable/galaxy"
            android:alpha="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/menu_IMG_meteor"
            android:layout_width="@dimen/size_meteor"
            android:layout_height="@dimen/size_meteor"
            android:src="@drawable/meteor"
            android:alpha="0.9"
            android:rotation="45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
